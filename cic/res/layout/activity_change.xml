<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/linearperson"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0099ff">

        <ImageView
            android:id="@+id/ivchangeback"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tvperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="修改信息" />

        
    </RelativeLayout>
   
    <RelativeLayout
        android:id="@+id/relativephoto"
        android:layout_width="match_parent"
        android:layout_height="140dp">

    <ImageView
        android:id="@+id/ivbackground"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/login2" />

    <com.jxnu.cic.view.CircleImageView
       android:id="@+id/photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:src="@drawable/touxiang" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativename"
        android:layout_width="match_parent"
        android:layout_height="45dp"
         >

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="昵称" />
        <TextView
            android:id="@+id/tvnamechoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="" />
        <ImageView
        android:id="@+id/imageViewname"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvname"
            android:text=">"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativesex"
        android:layout_width="match_parent"
        android:layout_height="45dp" >
        <TextView
            android:id="@+id/tvsex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="性别" />
         <TextView
            android:id="@+id/tvsexchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="" />
        

    <ImageView
        android:id="@+id/imageViewsex"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvsex"
            android:text=">"
            android:layout_centerVertical="true"
            android:textSize="20sp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeborntime"
        android:layout_width="match_parent"
        android:layout_height="45dp" >
        <TextView
            android:id="@+id/tvborntime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="出生日期" />
         <TextView
            android:id="@+id/tvborntimechoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvborntime"
            android:text=">"
            android:layout_centerVertical="true"
            android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />
        
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeschool"
        android:layout_width="match_parent"
        android:layout_height="45dp" >
    <TextView
            android:id="@+id/tvschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="就读学校" />
     <TextView
            android:id="@+id/tvschoolchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvschool"
            android:text=">"
            android:layout_centerVertical="true"
            android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageViewschool"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/relativeacademy"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/tvacademy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="学院" />
         <TextView
            android:id="@+id/tvacademychoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tvacademy"
            android:text=">"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
        <ImageView
        android:id="@+id/imageViewacademy"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />
        
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/relativeenterschool"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <TextView
            android:id="@+id/tventerschool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:text="入学年份" />
         <TextView
            android:id="@+id/tventerchoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="130dp"
            android:text="" />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tventerschool"
            android:text=">"
            android:layout_centerVertical="true"
            android:textSize="20sp" />
        <ImageView
        android:id="@+id/imageViewenter"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />
        
    </RelativeLayout>
    <ImageView
        android:id="@+id/imagelast"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="fitXY"
        android:src="@drawable/gray4" />


</LinearLayout>